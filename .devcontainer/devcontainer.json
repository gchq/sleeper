{
  "name": "Sleeper dev container",
  "image": "ghcr.io/gchq/sleeper-builder:latest",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "shengchen.vscode-checkstyle",
        "eamodio.gitlens",
        "rust-lang.rust-analyzer",
        "nemurubaka.cratesx",
        "ms-python.python",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "donjayamanne.python-environment-manager",
        "njpwerner.autodocstring",
        "mhutchie.git-graph",
        "scala-lang.scala",
        "dotjoshjohnson.xml"
      ]
    }
  },
  "mounts": [
    {
      "source": "${localEnv:HOME}/.aws",
      "target": "/home/sleeper/.aws",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.m2",
      "target": "/home/sleeper/.m2",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.ssh",
      "target": "/home/sleeper/.ssh",
      "type": "bind"
    }
  ],
  "containerEnv": {
    "AWS_ACCESS_KEY_ID": "${localEnv:AWS_ACCESS_KEY_ID}",
    "AWS_SECRET_ACCESS_KEY": "${localEnv:AWS_SECRET_ACCESS_KEY}",
    "AWS_SESSION_TOKEN": "${localEnv:AWS_SESSION_TOKEN}",
    "IN_CLI_CONTAINER": "true",
    "HOST_MOUNT_PATH": "${localWorkspaceFolder}",
    "CONTAINER_MOUNT_PATH": "${containerWorkspaceFolder}"
  },
  "initializeCommand": "mkdir -p ${localEnv:HOME}/.aws ; mkdir -p ${localEnv:HOME}/.m2 ; mkdir -p ${localEnv:HOME}/.ssh",
  "remoteUser": "sleeper",
  "updateRemoteUserUID": true
}
